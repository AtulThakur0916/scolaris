<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y min-vh-100 d-flex align-items-center">
    <div class="authentication-inner mx-auto" style="max-width: 400px;">
      <div class="card">
        <div class="card-body">
          <div class="app-brand justify-content-center mb-4">
            <a href="/" class="app-brand-link gap-2">
              <img src="/assets/img/logo.png" alt="Logo" width="30" height="30">
              <span class="app-brand-text demo text-body fw-bold">Scolaris Pay</span>
            </a>
          </div>

          <h4 class="mb-2">Forgot Password? ðŸ”’</h4>
          <p class="mb-4">Enter your email and we'll send you instructions to reset your password</p>

          {{#if messages.error}}
          <div class="alert alert-danger">{{messages.error}}</div>
          {{/if}}
<script>
  console.log("{{messages}}");
</script>
          {{#if messages.success}}
          <div class="alert alert-success">
            {{messages.success}}
          </div>
          {{/if}}

          <form action="/forgot-password" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" 
                placeholder="Enter your email" autofocus required />
            </div>
            <button class="btn btn-primary d-grid w-100" type="submit">Send Reset Link</button>
          </form>

          <div class="text-center">
            <a href="/login" class="d-flex align-items-center justify-content-center text-decoration-none">
              <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
              Back to login
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
