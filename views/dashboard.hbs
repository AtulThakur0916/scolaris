<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    {{#if isSuperAdmin}}
    <div class="row g-4">
      <!-- Schools Card -->
      <div class="col-sm-6 col-lg-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">Total Schools</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">{{schoolCount}}</h3>
                  <span class="badge bg-label-info rounded-pill">Schools</span>
                </div>
                <div class="mt-2">
                  <div class="d-flex align-items-center gap-2">
                    <span class="badge bg-warning">Pending: {{pendingSchools}}</span>
                    <span class="badge bg-success">Approved: {{approvedSchools}}</span>
                    <span class="badge bg-danger">Rejected: {{rejectedSchools}}</span>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/schools/index" class="btn btn-sm btn-info">View Schools</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-info">
                  <i class="bx bx-building-house bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Subscriptions Card -->
      <div class="col-sm-6 col-lg-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">Total Subscriptions Payment</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">F&nbsp;CFA{{paymentCount}}</h3>
                  <span class="badge bg-label-primary rounded-pill">Payment</span>
                </div>
                <small class="text-muted">Paid Subscriptions</small>
                <div class="mt-3">
                  <a href="/subscriptions/index" class="btn btn-sm btn-primary">View Subscriptions</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-primary">
                  <i class="bx bx-money bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- School Fees Card -->
      <div class="col-sm-6 col-lg-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">School Fees Payment</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">F&nbsp;CFA{{schoolFeeSum}}</h3>
                  <span class="badge bg-label-success rounded-pill">School Fees</span>
                </div>
                <small class="text-muted">Paid School Fees</small>
                <div class="mt-3">
                  <a href="/payments/index" class="btn btn-sm btn-success">View School Fees</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-success">
                  <i class="bx bx-wallet bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Students Card -->
      <div class="col-sm-6 col-lg-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">Students</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">{{studentsCount}}</h3>
                  <span class="badge bg-label-warning rounded-pill">Students</span>
                </div>
                <small class="text-muted">Total Students</small>
                <div class="mt-3">
                  <a href="/students/index" class="btn btn-sm btn-warning">View Students</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-warning">
                  <i class="bx bxs-graduation bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{else}}
    <!-- Non-SuperAdmin View -->
    <div class="row g-4">
      <!-- School Fees Card -->
      <div class="col-sm-6">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">School Fees Payment</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">F&nbsp;CFA{{schoolFeeSum}}</h3>
                  <span class="badge bg-label-success rounded-pill">School Fees</span>
                </div>
                <small class="text-muted">Paid School Fees</small>
                <div class="mt-3">
                  <a href="/payments/index" class="btn btn-sm btn-success">View School Fees</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-success">
                  <i class="bx bx-wallet bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Students Card -->
      <div class="col-sm-6">
        <div class="card h-100">
          <div class="card-body d-flex flex-column h-100">
            <div class="d-flex justify-content-between align-items-start">
              <div class="content-left">
                <span class="fw-medium d-block mb-1">Students</span>
                <div class="d-flex align-items-center mt-1">
                  <h3 class="mb-0 me-2">{{studentsCount}}</h3>
                  <span class="badge bg-label-warning rounded-pill">Students</span>
                </div>
                <small class="text-muted">Total Students</small>
                <div class="mt-3">
                  <a href="/students/index" class="btn btn-sm btn-warning">View Students</a>
                </div>
              </div>
              <div class="avatar flex-shrink-0">
                <span class="avatar-initial rounded bg-warning">
                  <i class="bx bxs-graduation bx-sm"></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
  </div>
</div>