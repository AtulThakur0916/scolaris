<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
      <span class="text-muted fw-light">Schools /</span>
      List
    </h4>

    {{#if success}}
    <div class="alert alert-success alert-dismissible" role="alert">
      {{#each success}}
      {{this}}
      {{else}}
      {{success}}
      {{/each}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger alert-dismissible" role="alert">
      {{#each error}}
      {{this}}
      {{else}}
      {{error}}
      {{/each}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <!-- Users List Table -->
    <div class="card">
      <div class="card-header border-bottom">
        <h5 class="card-title mb-3">Schools List</h5>
      </div>
      <div class="card-datatable table-responsive">
        {{!-- <table class="table border-top" id="schoolsTable"> --}}
          {{!-- <div class="card-datatable table-responsive"> --}}
            <table class="table border-top datatables-schools" id="schoolsTable">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Location</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each schools}}
                <tr>
                  <td>{{@index}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.location}}</td>
                  <td>{{this.phone_number}}</td>
                  <td>{{this.email}}</td>
                  <td>

                    <a href="/schools/create/{{this.id}}" class="btn btn-sm btn-primary"> <i
                        class="menu-icon tf-icons bx bx-edit-alt"></i></a>
                    <a href="/schools/delete/{{this.id}}" class="btn btn-sm btn-danger">Delete</a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
      </div>