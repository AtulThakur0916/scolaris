<!-- Content wrapper -->
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">Subscriptions /</span>
            List
        </h4>

        {{#if messages.success}}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{messages.success}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}

        {{#if messages.error}}
        <div class="alert alert-danger alert-dismissible" role="alert">
            {{messages.error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}

        <!-- Subscriptions List Table -->
        <div class="card">
            <div class="card-header border-bottom d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-3">School Subscriptions List</h5>
            </div>
            <div class="card-datatable table-responsive p-4">
                <table class="table border-top" id="dataTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>School Name</th>
                            <th>Email</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                            <th>Reference</th>
                            <th>Status</th>
                            <th>Session</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each subscriptions}}
                        <tr>
                            <td class="row-index" data-index="{{@index}}"></td>
                            <td>{{this.school.name}}</td>
                            <td>{{this.school.email}}</td>
                            <td>{{this.amount}}</td>
                            <td>{{this.payment_date}}</td>
                            <td>{{this.reference}}</td>
                            <td>{{this.status}}</td>
                            <td>
                                <a href="/sessions/index?school_id={{this.school.id}}" class="text-primary">
                                    All Session
                                </a>
                            </td>
                            <td>
                                <a href="/subscriptions/views/{{this.id}}">
                                    <i class="menu-icon tf-icons bx bx-show text-primary"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>